<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.CartController">

    <center>
        <VBox spacing="15" prefHeight="400" alignment="TOP_CENTER">
            <!-- TableView panier -->
            <TableView fx:id="cartTable" prefHeight="200" prefWidth="600">
                <columns>
                    <TableColumn fx:id="colProduct" text="Produit" prefWidth="150"/>
                    <TableColumn fx:id="colPrice" text="Prix (TND)" prefWidth="100"/>
                    <TableColumn fx:id="colQuantity" text="Quantité" prefWidth="100"/>
                    <TableColumn fx:id="colTotal" text="Total Produit" prefWidth="100"/>
                    <TableColumn fx:id="colActions" text="Actions" prefWidth="150"/>
                </columns>
            </TableView>

            <!-- Total général -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Label text="Total général :" />
                <Label fx:id="totalLabel" text="0.00 TND" style="-fx-text-fill: green;"/>
            </HBox>

            <!-- Code promo -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Code promo :" />
                <TextField fx:id="couponField" promptText="ex: ABC123" prefWidth="150"/>
                <Button fx:id="applyCouponButton" text="Appliquer"/>
                <Label fx:id="couponMessageLabel" text="" style="-fx-text-fill: green;" />
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="15" alignment="CENTER">
            <Button text="Valider ma commande" onAction="#onValider" />
            <Button text="Vider le panier" onAction="#onVider" />
            <Button text="Voir mes commandes" onAction="#onAfficherCommandes" />
            <Button text="Continuer vos achats" onAction="#onContinuer" />
        </HBox>
    </bottom>

</BorderPane>
