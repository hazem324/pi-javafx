<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="bp"
            prefHeight="600.0"
            prefWidth="800.0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.marketplace.ProductController">
    <center>
    <VBox spacing="20" style="-fx-background-color: linear-gradient(to bottom right, #e8f5e9, #c8e6c9);"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <children>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Label text="Featured Products"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="addButton" text="Add Product" onAction="#showAddForm"
                        style="-fx-background-color: #7ac400; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 12;"/>
            </HBox>

            <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS">
                <GridPane fx:id="productGrid" hgap="15" vgap="15" style="-fx-padding: 10;">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25"/>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25"/>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25"/>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25"/>
                    </columnConstraints>
                </GridPane>
            </ScrollPane>
        </children>
    </VBox>
    </center>
</BorderPane>