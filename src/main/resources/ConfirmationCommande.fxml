<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.ConfirmationCommandeController"
      alignment="CENTER" spacing="20" style="-fx-background-color: #ffffff;">

    <padding>
        <Insets top="40" right="30" bottom="40" left="30"/>
    </padding>

    <!--<ImageView fitHeight="100" fitWidth="100"
               image="@/icons/verify-icon.png" preserveRatio="true"/> -->

    <Label text="Commande validée avec succès !"
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #0AAE61;"/>

    <Label text="Merci pour votre achat sur CultureSpace !"
           style="-fx-font-size: 14px; -fx-text-fill: #555;"/>

    <HBox alignment="CENTER" spacing="15">
        <Button text="Retour aux produits"
                onAction="#onRetourProduits"
                style="-fx-background-color: #0AAE61; -fx-text-fill: white;"/>

        <Button text="Voir mes commandes"
                onAction="#onVoirCommandes"
                style="-fx-background-color: #3498DB; -fx-text-fill: white;"/>
    </HBox>
</VBox>
