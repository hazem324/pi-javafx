<?xml version="1.0" encoding="UTF-8"?>
        <?import javafx.geometry.Insets?>
        <?import javafx.scene.control.Button?>
        <?import javafx.scene.control.Label?>
        <?import javafx.scene.control.TextField?>
        <?import javafx.scene.layout.StackPane?>
        <?import javafx.scene.layout.VBox?>
        <?import java.lang.String?>

<StackPane style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ForgotPasswordController">
    <children>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(255, 255, 255, 0.8); -fx-background-radius: 20; -fx-border-color: rgba(38, 166, 154, 0.3); -fx-border-width: 1; -fx-border-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0, 0, 5); -fx-padding: 40; -fx-max-width: 400;">
            <!-- Title -->
            <Label text="Forgot Password" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-font-family: 'Segoe UI', sans-serif; -fx-text-fill: linear-gradient(to right, #26a69a, #4fc3f7);" />
            <!-- Email Label -->
            <Label text="Enter your email address" style="-fx-font-size: 14px; -fx-text-fill: #333333; -fx-font-family: 'Segoe UI', sans-serif;" />
            <!-- Email TextField -->
            <TextField fx:id="emailTF" promptText="example@domain.com" style="-fx-background-color: #ffffff; -fx-border-color: #d3d3d3; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 16px; -fx-padding: 10; -fx-font-family: 'Segoe UI', sans-serif; -fx-pref-width: 300;" />
            <!-- Submit Button -->
            <Button text="Submit" onAction="#submitEmail" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 120; -fx-font-family: 'Segoe UI', sans-serif;" styleClass="submit-button" />
        </VBox>
    </children>
    <stylesheets>
        <String fx:value="/css/forgot-password.css" />
    </stylesheets>
</StackPane>
